@page "/{id}"
@inherits StudentDetailsBase

@if(Student == null && ErrorMessage == null){
    <h3>Loading student details...</h3>
}
else if(ErrorMessage != null){
    <h3 class="text-danger">@ErrorMessage</h3>
}
else {
    <h3 class="mb-5">Student Details</h3>
    <div class="row">
        <div class="col-md-6">
            <h3>@Student.RollNumber</h3>
            <p class="mb-4">@Student.Name</p>
            <p class="mb-4">@Student.Class</p>
            <p class="mb-4">@Student.Dob</p>
        </div>
    </div>
    <div>
        <a href="/">Go Back</a>
    </div>
}
