@page "/{id}"
@inherits StudentDetailsBase

@if(Student == null && ErrorMessage == null){
    <h3>Loading student details...</h3>
}
else if(ErrorMessage != null){
    <h3 class="text-danger">@ErrorMessage</h3>
}
else {
    <h3 class="mb-5">Student Details</h3>
    <div class="row">
        <div class="col-md-6">
            <h5><b>RollNumber: </b>@Student.RollNumber</h5>
            <p class="mb-4"><b>Name: </b>@Student.Name</p>
            <p class="mb-4"><b>Class: </b>@Student.Class</p>
            <p class="mb-4"><b>Date of Birth: </b>@Student.Dob</p>
        </div>
        <a href="/@Student.RollNumber/marks">Show Marks</a>
    </div>
    <div>
        <a href="/">Go Back</a>
    </div>
}
