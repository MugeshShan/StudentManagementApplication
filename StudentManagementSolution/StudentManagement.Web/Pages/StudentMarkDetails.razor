@page "/{id}/marks"
@inherits StudentMarkDetailsBase

@if(Student == null && ErrorMessage == null){
    <h3>Loading student details...</h3>
}
else if(ErrorMessage != null){
    <h3 class="text-danger">@ErrorMessage</h3>
}
else {
    <h3 class="mb-5">Student Details</h3>
    <div class="row">
        <div class="col-md-6">
            <h5><b>RollNumber: </b>@Student.RollNumber</h5>
            <p class="mb-4"><b>Tamil: </b>@Student.Tamil</p>
            <p class="mb-4"><b>English: </b>@Student.English</p>
            <p class="mb-4"><b>Maths: </b>@Student.Maths</p>
            <p class="mb-4"><b>Science: </b>@Student.Science</p>
            <p class="mb-4"><b>Social: </b>@Student.Social</p>
            <h4 class="mb-4"><b>TotalMarks: </b>@Student.TotalMarks</h4>
        </div>
    </div>
    <div>
        <a href="/">Go Back</a>
    </div>
}

